{
    "manifest_version": 3,
    "default_locale": "en",

    "name": "__MSG_extension_name__",
    "description": "__MSG_extension_description__",
    "version": "1.0",

    "icons": {
        "48": "images/icon-48.png",
        "96": "images/icon-96.png",
        "128": "images/icon-128.png",
        "256": "images/icon-256.png",
        "512": "images/icon-512.png"
    },

    "background": {
        "service_worker": "background.js",
        "type": "module"
    },

    "content_scripts": [{
        "js": [ "content.js" ],
        "matches": [
            "https://thesisgit.gitlab.yandexcloud.net/bilet/bvb_api/-/merge_requests/*"
        ]
    }],

    "action": {
        "default_popup": "popup.html",
        "default_icon": "images/toolbar-icon.svg"
    },

    "permissions": [
        "storage"
    ],
    "host_permissions": [
        "https://thesisgit.gitlab.yandexcloud.net/*",
        "https://api.weeek.net/*",
        "https://app.weeek.net/*"
    ]
}
